{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev-debug",
      "displayName": "Dev Debug (Cross-platform)",
      "description": "Cross-platform developer preset using Ninja Multi-Config (Debug)",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "BUILD_GUI": "ON"
      }
    },
    {
      "name": "dev-release",
      "displayName": "Dev Release (Cross-platform)",
      "description": "Cross-platform developer preset using Ninja Multi-Config (Release)",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "BUILD_GUI": "ON",
        "BUILD_TESTS": "OFF",
        "BUILD_DOCS": "OFF"
      }
    },
    {
      "name": "unix-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "inherits": "unix-base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-gui-debug",
      "displayName": "Linux GUI Debug",
      "description": "Build orc-gui + orc-cli with Ninja (Debug)",
      "inherits": "linux-base",
      "cacheVariables": {
        "BUILD_GUI": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-local-gui-debug",
      "displayName": "Linux Local GUI Debug (No vcpkg)",
      "description": "Build orc-gui + orc-cli with Ninja (Debug) using system dependencies",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "BUILD_GUI": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-cli-debug",
      "displayName": "Linux CLI Debug",
      "description": "Build orc-cli without GUI with Ninja (Debug)",
      "inherits": "linux-base",
      "cacheVariables": {
        "BUILD_GUI": "OFF",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-gui-release",
      "displayName": "Linux GUI Release",
      "description": "Build orc-gui + orc-cli with Ninja (Release)",
      "inherits": "linux-base",
      "cacheVariables": {
        "BUILD_GUI": "ON",
        "BUILD_TESTS": "OFF",
        "BUILD_DOCS": "OFF",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-cli-release",
      "displayName": "Linux CLI Release",
      "description": "Build orc-cli without GUI with Ninja (Release)",
      "inherits": "linux-base",
      "cacheVariables": {
        "BUILD_GUI": "OFF",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "macos-base",
      "hidden": true,
      "inherits": "unix-base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-gui-debug",
      "displayName": "macOS GUI Debug",
      "description": "Build orc-gui + orc-cli with Ninja (Debug)",
      "inherits": "macos-base",
      "cacheVariables": {
        "BUILD_GUI": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos-cli-debug",
      "displayName": "macOS CLI Debug",
      "description": "Build orc-cli without GUI with Ninja (Debug)",
      "inherits": "macos-base",
      "cacheVariables": {
        "BUILD_GUI": "OFF",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos-gui-release",
      "displayName": "macOS GUI Release",
      "description": "Build orc-gui + orc-cli with Ninja (Release)",
      "inherits": "macos-base",
      "cacheVariables": {
        "BUILD_GUI": "ON",
        "BUILD_TESTS": "OFF",
        "BUILD_DOCS": "OFF",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "macos-cli-release",
      "displayName": "macOS CLI Release",
      "description": "Build orc-cli without GUI with Ninja (Release)",
      "inherits": "macos-base",
      "cacheVariables": {
        "BUILD_GUI": "OFF",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "BASH_EXECUTABLE": "C:/Program Files/Git/bin/bash.exe"
      }
    },
    {
      "name": "windows-gui-debug",
      "displayName": "Windows GUI Debug",
      "description": "Build orc-gui + orc-cli with Visual Studio 2022 (Debug)",
      "inherits": "windows-base",
      "cacheVariables": {
        "BUILD_GUI": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-cli-debug",
      "displayName": "Windows CLI Debug",
      "description": "Build orc-cli without GUI with Visual Studio 2022 (Debug)",
      "inherits": "windows-base",
      "cacheVariables": {
        "BUILD_GUI": "OFF",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-gui-release",
      "displayName": "Windows GUI Release",
      "description": "Build orc-gui + orc-cli with Visual Studio 2022 (Release)",
      "inherits": "windows-base",
      "cacheVariables": {
        "BUILD_GUI": "ON",
        "BUILD_TESTS": "OFF",
        "BUILD_DOCS": "OFF",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-cli-release",
      "displayName": "Windows CLI Release",
      "description": "Build orc-cli without GUI with Visual Studio 2022 (Release)",
      "inherits": "windows-base",
      "cacheVariables": {
        "BUILD_GUI": "OFF",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
